{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types/*", "src/@types/*"
    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}
